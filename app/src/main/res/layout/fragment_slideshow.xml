<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/estilo_boton"
    tools:context=".ui.slideshow.SlideshowFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/subirarchivo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubir"
                android:layout_width="match_parent"
                app:cornerRadius="10dp"
                android:layout_height="wrap_content"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="Subir archivos"
                app:icon="@drawable/nube"

                android:textSize="20dp"
                app:iconGravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDescargar"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="Descargar archivos"
                app:icon="@drawable/descargararchivo"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:iconGravity="start"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>